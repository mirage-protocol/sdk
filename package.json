{
  "name": "@mirage-protocol/sdk",
  "license": "MIT",
  "version": "0.2.8",
  "publishConfig": {
    "access": "public"
  },
  "description": "Typescript library for interacting with Mirage Protocol move contracts",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "aptos",
    "move",
    "mirage"
  ],
  "module": "dist/sdk.esm.js",
  "repository": "https://github.com/mirage-protocol/sdk.git",
  "author": {
    "name": "mirage-protocol",
    "email": "contact@mirage.money",
    "url": "https://mirage.money"
  },
  "scripts": {
    "build": "npm run clean && tsup src/index.ts --format esm,cjs --dts",
    "clean": "rm -rf dist",
    "format": "prettier --check ./src",
    "lint": "eslint . --ext ts --ext tsx --ext js --quiet",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@aptos-labs/ts-sdk": "^1.10.0",
    "@pythnetwork/pyth-aptos-js": "^1.4.2",
    "@pythnetwork/pyth-common-js": "^1.4.0",
    "aptos": "^1.21.0",
    "bignumber.js": "9.1.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "react": "^18.2.0",
    "urql": "^4.0.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typescript": "4.0.6",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@graphql-codegen/typescript-urql": "^4.0.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/node": "^18.7.11",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "tsup": "^6.6.3",
    "typescript": "^5.4.3"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "packageManager": "yarn@4.1.1"
}
