{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2022",
    "lib": ["es2022", "esnext.bigint", "dom"],
    "allowJs": true,
    "checkJs": true,
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
     "@/*": ["./*"] // Maps @/ to project root
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src/**/*"]
}
